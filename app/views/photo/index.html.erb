<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<h2><p class="text-info"><p class="text-center">Photos Posted by: <%= @users.first_name %> <%= @users.last_name %></p></h2>

<body>

<% @photos.each do |photo| %>
  <div>
    <%= image_tag photo.file_name %>

    <h6>
      --Posted on <%= photo.date_time %>
    </h6>

    <% @comments = photo.comments %>
    <% if @comments.count == 0%>
      <h6>
        <p class="text-info">Comments:</p>
        Be the first to leave a comment!
      </h6><br /><br />

    <% else %>

      <h6><p class="text-info">Comment:</p></h6>
      <% @comments.each do |comment| %>
        <div>
          <ul>
          <li>
            "<%= comment.comment_text %>"
            -- By
            <% @user = User.find(comment.user_id) %>
            <%= link_to @user.first_name, {action: "index", :id => @user.id} %> <%= @user.last_name %>
            on
            <%= comment.date_time %>
          </li>
          </ul>
        </div>
      <% end %><br /><br />

    <% end %>
  </div>
<% end %>

</body>